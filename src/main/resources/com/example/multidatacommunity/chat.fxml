<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.multidatacommunity.ChatController">
    <left>
        <VBox alignment="TOP_CENTER" spacing="10" styleClass="vbox-container">
            <Label styleClass="label-class" text="用户信息" />
            <TextArea fx:id="userInfo" editable="false" styleClass="text-area-class" wrapText="true" />
        </VBox>
    </left>
    <center>
        <VBox alignment="TOP_CENTER" spacing="10" styleClass="vbox-container">
         <Label text="聊天发送操作框">
            <font>
               <Font size="15.0" />
            </font>
         </Label>
            <TextArea fx:id="chatHistory" editable="false" styleClass="text-area-class" wrapText="true" />
            <HBox spacing="10">
                <TextField fx:id="messageInput" HBox.hgrow="ALWAYS" />
                <Button onAction="#onSendMessage" styleClass="button-class" text="发送" />
                <Button fx:id="addButton" onAction="#onAddOption" styleClass="button-class" text="+" />
            </HBox>
            <HBox fx:id="additionalButtons" spacing="80.0" visible="false">
                <ToggleButton fx:id="recordButton" onAction="#onRecordAudio" styleClass="button-class" text="录音">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></ToggleButton>
                <Button onAction="#onSendAudio" styleClass="button-class" text="发送录音">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></Button>
                <Button onAction="#onSendImage" styleClass="button-class" text="发送图片" />
                <Button onAction="#onModeling" styleClass="button-class" text="数学建模" />
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            <padding>
               <Insets left="40.0" />
            </padding>
            </HBox>
        </VBox>
    </center>
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefHeight="48.0" prefWidth="199.0" text="聊天信息接收框" textAlignment="CENTER">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
            <TextArea fx:id="chatHistory1" editable="false" prefHeight="275.0" prefWidth="1248.0" styleClass="text-area-class" wrapText="true" />
         </children>
      </VBox>
   </top>
</BorderPane>
